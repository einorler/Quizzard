{% extends 'base.html.twig' %}

{% block title %}My Quizzes{% endblock %}

{% block body %}
    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Created Quizzes</h1>
            <p class="lead text-muted">
                Here you can see and edit all the quizzes that you have created.
            </p>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="row">
                {% for quiz in quizzes %}
                    {% include ':partials:_quiz_profile.html.twig' with {quiz: quiz, statistics: statistics[quiz.id]} %}
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
